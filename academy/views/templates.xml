<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <template id="other-template">
    <h2>Other Templatee: <t t-esc="foo" /></h2>
    <t t-raw="0" />
  </template>

  <template id="index">
        <title>Academy</title>
        <t t-foreach="teachers" t-as="teacher">
            <p><t t-esc="teacher" /></p>
        </t>

        <t t-if="1 == 1">
          <p>1 is equal to 1</p>
        </t>

        <t t-foreach="[1,2,3,4]" t-as="i">
          <p t-esc="i" />
          <p>*** Value ***</p>
          <t t-esc="i_value" />
          <p>*** Index ***</p>
          <t t-esc="i_index" />
          <p>*** Size ***</p>
          <t t-esc="i_size" />
          <p>*** First ***</p>
          <t t-esc="i_first" />
          <p>*** Last ***</p>
          <t t-esc="i_last" />
          <p>*** Parity ***</p>
          <t t-esc="i_parity" />
          <p>*** Middle ***</p>
          <t t-esc="i_middle" />
          <p>*** Even ***</p>
          <t t-esc="i_even" />
          <p>*** Odd ***</p>
          <t t-esc="i_odd" />
        </t>

        <div t-att-a="70" />

        <t t-foreach="[1,2,3,4]" t-as="item">
          <li t-attf-class="row {{item}}">
            <t t-esc="item" />
          </li>
        </t>

        <div t-att="{'a': 1, 'b':2}" />
        <div t-att="['a','b']" />

        <t t-set="foo" t-value="70 + 3" />
        <p>Separator</p>
        <div>
          <span>The value of foo is: </span>
          <t t-esc="foo" />
        </div>

        <t t-call="academy.other-template">
          <p>I'm a paragraph inside the call</p>
          <p>I'm a second paragraph inside the call</p>
        </t>
    </template>
</odoo>
